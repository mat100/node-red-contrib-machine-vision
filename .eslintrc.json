{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "globals": {
    "RED": "readonly"
  }
}
