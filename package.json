{
  "name": "node-red-contrib-machine-vision",
  "version": "1.0.0",
  "description": "Industrial machine vision nodes for Node-RED with template matching, edge detection, color detection, ArUco markers, and rotation analysis",
  "author": "Matej Supik",
  "license": "GPL-3.0",
  "keywords": [
    "node-red",
    "machine-vision",
    "computer-vision",
    "opencv",
    "template-matching",
    "inspection",
    "quality-control",
    "image-processing",
    "edge-detection",
    "color-detection",
    "aruco",
    "qr-code",
    "automation",
    "factory-automation",
    "keyence",
    "cognex"
  ],
  "node-red": {
    "version": ">=2.0.0",
    "nodes": {
      "mv-config": "nodes/config/mv-config.js",
      "mv-camera-capture": "nodes/camera/mv-camera-capture.js",
      "mv-live-preview": "nodes/camera/mv-live-preview.js",
      "mv-image-import": "nodes/camera/mv-image-import.js",
      "mv-template-match": "nodes/vision/mv-template-match.js",
      "mv-edge-detect": "nodes/vision/mv-edge-detect.js",
      "mv-color-detect": "nodes/vision/mv-color-detect.js",
      "mv-aruco-detect": "nodes/vision/mv-aruco-detect.js",
      "mv-rotation-detect": "nodes/vision/mv-rotation-detect.js",
      "mv-roi-extract": "nodes/vision/mv-roi-extract.js",
      "mv-overlay": "nodes/output/mv-overlay.js"
    }
  },
  "scripts": {
    "test": "mocha test/**/*.test.js --timeout 5000",
    "test:watch": "nodemon --exec npm test",
    "test:coverage": "nyc npm test",
    "lint": "eslint nodes/**/*.js"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "mocha": "^10.0.0",
    "chai": "^4.3.0",
    "sinon": "^17.0.0",
    "nock": "^13.5.0",
    "node-red-node-test-helper": "^0.3.0",
    "nyc": "^15.1.0",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mat100/node-red-contrib-machine-vision.git"
  },
  "bugs": {
    "url": "https://github.com/mat100/node-red-contrib-machine-vision/issues"
  },
  "homepage": "https://github.com/mat100/node-red-contrib-machine-vision#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "nodes/**/*.js",
    "nodes/**/*.html",
    "README.md",
    "LICENSE"
  ]
}
